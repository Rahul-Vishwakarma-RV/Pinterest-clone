<% include ./partials/header.ejs %>
<div class="w-full min-h-screen px-10 py-5">
    <h1 class="text-xl">Create A New Post.</h1>
    <hr class="opacity-90  mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2 mt-2" type="file" name="postimage">
        <input class="block w-1/3 px-3 py-2 border-2 rounded-md mt-2" type="text" placeholder="Title" name="title">
        <textarea class="block w-1/3 px-3 py-2 h-20 border-2 rounded-md mt-2" type="text" placeholder="Description" name="description"></textarea>
        <input class="block w-1/3 px-3 py-2  rounded-md mt-2 bg-red-700 text-white" type="submit" value="Create Post">
    </form>
</div>
<% include ./partials/footer.ejs %>
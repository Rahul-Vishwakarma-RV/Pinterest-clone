<% include ./partials/header.ejs %>
  <div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[30vw] bg-white px-16 py-7 rounded-[30px]">
      <i class="ml-36  text-red-500 text-4xl ri-pinterest-fill"></i>
      <h1 class="text-[25px] mt-5 mb-7 font-[500] text-zinc-600 tracking-tight capitalize text-center leading-none">Create New Account</h1>
      <form action="/register" method="post">
        <input class=" block border-2 rounded-md mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
        <input class=" block border-2 rounded-md mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Fullname">
        <input class=" block border-2 rounded-md mt-2 w-full px-3 py-2" type="email" name="email" placeholder="emal">
        <input class=" block border-2 rounded-md mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="contact">
        <input class=" block border-2 rounded-md mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
        <input class=" block border-2 rounded-full mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create New Account">
        <p class="text-xs font-medium text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service; acknowledge you've read our Privacy Policy;Notice at collection</p>
      </form>
      <a class="inline-block font-[500] w-full mt-7 text-sm text-zinc-700 text-center" href="/">Login Existing Account ?</a>
    </div>
  </div>
<% include ./partials/footer.ejs %>